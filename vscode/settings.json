// Extensions :
// - Vim
// - Python
// - Pylance
// - Autopep8
// - C/C++
// - Modern Fortran
// - Tokyo Night
// - Gruvbox
// - vscode-icons
// - vscode-pdf
// - indent rainbow

{
  "window.customTitleBarVisibility": "never",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.cursorSurroundingLines": 10,
  "editor.fontLigatures": false,
  "editor.fontWeight": 550,
  "editor.lightbulb.enabled": "off",
  // "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggestFontSize": 12,
  "editor.wordWrap": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": false,
  "editor.renderWhitespace": "none",
  "editor.stickyScroll.enabled": false,
  "editor.renderControlCharacters": false,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabFocusMode": false,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.autoClosingComments": "always",
  "editor.guides.indentation": true,
  "editor.detectIndentation": true,
  "editor.rulers": [80],
  "editor.insertSpaces": true,
  "editor.fontFamily":"'Liga SFMono Nerd Font', 'SF Mono Nerd', 'SF Mono'",

  "workbench.startupEditor": "none",
  "workbench.tree.indent": 12,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.preferredDarkColorTheme": "Tokyo Night",
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editor.enablePreview": false,
   "workbench.colorCustomizations": {
    "[Tokyo Night Light]": {
    "editor.selectionBackground":"#bee8f0",
    "statusBar.background":"#d5d6db",
    "statusBar.border":"#d5d6db",
    "editorBracketHighlight.foreground1": "#34548a",
    "editorBracketHighlight.foreground3": "#8e2489",
    "editorBracketHighlight.foreground2": "#789e51",
    "editorBracketHighlight.foreground4": "#7d66a5",
    "editorBracketHighlight.foreground5": "#e88a54",
    "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
    },
    "[Gruvbox Dark (Medium)]": {
      "editorBracketHighlight.foreground1": "#83A598",
      "editorBracketHighlight.foreground2": "#789e51",
      "editorBracketHighlight.foreground3": "#D3869B",
      "editorBracketHighlight.foreground4": "#FABD2F",
      "editorBracketHighlight.foreground5": "#8EC07C",
      "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
      "titleBar.activeBackground":"#282828",
      "editor.background":"#282828",
      "tab.activeBorder":"#83A598",
      "statusBar.noFolderBackground":"#2b2b2b",
      "statusBar.background":"#2b2b2b",
      "terminal.background":"#282828",
      "terminal.foreground":"#D5C4A1",
      "terminalCursor.background":"#D5C4A1",
      "terminalCursor.foreground":"#D5C4A1",
      "terminal.ansiBlack":"#282828",
      "terminal.ansiBlue":"#83A598",
      "terminal.ansiBrightBlack":"#665C54",
      "terminal.ansiBrightBlue":"#83A598",
      "terminal.ansiBrightCyan":"#8EC07C",
      "terminal.ansiBrightGreen":"#B8BB26",
      "terminal.ansiBrightMagenta":"#D3869B",
      "terminal.ansiBrightRed":"#FB4934",
      "terminal.ansiBrightWhite":"#FBF1C7",
      "terminal.ansiBrightYellow":"#FABD2F",
      "terminal.ansiCyan":"#8EC07C",
      "terminal.ansiGreen":"#B8BB26",
      "terminal.ansiMagenta":"#D3869B",
      "terminal.ansiRed":"#FB4934",
      "terminal.ansiWhite":"#D5C4A1",
      "terminal.ansiYellow":"#FABD2F"
      },
   },

  "editor.scrollbar.horizontalScrollbarSize": 0,
  "workbench.reduceMotion": "off",
  "window.commandCenter": false,
  "window.newWindowDimensions": "maximized",
  "window.restoreFullscreen": true,
  "window.zoomLevel": 1,
  "window.titleBarStyle": "custom",

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": false,

  "vim.highlightedyank.color": "rgba(255,219,143,0.6)",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  "vim.hlsearch": true ,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["m"],
      "commands": ["editor.action.commentLine", "extension.vim_escape"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["m"],
      "commands": ["editor.action.commentLine", "extension.vim_escape"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["ctrl+v"],
      "commands": ["editor.action.clipboardPasteAction"]
    }
  ],

  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": true,
  "zenMode.fullScreen": true,
  "zenMode.centerLayout": false,

  "files.exclude": {
    "**/.git": true,
    "**/.vscode": true,
    "**/.gitignore": true,
    "**/README.md": true
  },

  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.wordWrap": "on",
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.experimental.showMoves": true,

  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorStyleInactive": "underline",
  "terminal.integrated.sendKeybindingsToShell": false,
  "terminal.integrated.fontFamily": "'Liga SFMono Nerd Font', 'SF Mono Nerd', 'SF Mono', Consolas",
  "terminal.integrated.commandsToSkipShell": [
    "workbench.files.action.focusFilesExplorer",
    "workbench.action.toggleSidebarVisibility",
  ],


  "python.languageServer": "Pylance",
  "[python]": {
    // "editor.formatOnSave": true,
    "diffEditor.ignoreTrimWhitespace": true
  },
  "breadcrumbs.enabled": false,
  "telemetry.telemetryLevel": "off",

  "remote.autoForwardPortsSource": "hybrid",

  "pdf-preview.default.scale": "page-width",
  "pdf-preview.default.cursor": "hand",
  "workbench.editorAssociations": {
    "*.pdf": "pdf.preview"
  },
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "window.menuBarVisibility": "compact",
  "warmUp.changeCount": "15",
}